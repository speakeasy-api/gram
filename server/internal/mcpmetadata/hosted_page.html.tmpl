    <!-- CLAUDE CODE INSTALL -->
    <template class="install-target-template" data-install-target="claude-code">
      <div class="modal-content">
        <h1>Instructions</h1>
        <ol>
          <li class="instruction-item">
            Ensure the Claude Code executable is available in your path
          </li>
          <li class="instruction-item">
            Execute the following snippet in your shell:
            <div class="card code-container">
              <button class="copy-button waiting">
                <svg
                  class="icon icon-copy"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                >
                  <use href="#icon-copy"></use>
                </svg>
                <svg
                  class="icon icon-copy-success"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                >
                  <use href="#icon-copy-check"></use>
                </svg>
              </button>
              <!-- prettier-ignore -->
              <code class="code-snippet language-sh">claude mcp add --transport http "{{ .MCPSlug }}" \
    "{{ .MCPURL }}"{{- range .SecurityInputs }} \
    --header '{{ .SystemName | asHTTPHeader }}:{{ printf "${%s}" (.DisplayName | asPosixName) }}'{{- end }}</code>            </div>
          </li>
          {{- if .SecurityInputs }}
          <li class="instruction-item">
            After installation, set these environment variables in your shell:
            <div class="card code-container">
              <button class="copy-button waiting">
                <svg
                  class="icon icon-copy"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                >
                  <use href="#icon-copy"></use>
                </svg>
                <svg
                  class="icon icon-copy-success"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                >
                  <use href="#icon-copy-check"></use>
                </svg>
              </button>
              <!-- prettier-ignore -->
              <code class="code-snippet language-sh">{{- range .SecurityInputs -}}
export {{ .DisplayName | asPosixName }}="your-{{ .DisplayName | asPosixName }}-value"
{{ end }}</code>
            </div>
            <p>
              The MCP configuration supports environment variable expansion
              using
              <code>${VAR}</code>
              syntax. You can also provide default values using
              <code>${VAR:-default}</code>
              format.
            </p>
          </li>
          {{- end }}
        </ol>
      </div>
    </template>
