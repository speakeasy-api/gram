          <script id="manifest-json-blob" type="application/json">
            {
  "dxt_version": "0.1",
  "name": "{{ .MCPName }}",
  "version": "1.0.0",
  "description": "{{ .MCPDescription }}",
  "author": {
     "name": "{{ .OrganizationName }} with Gram"
  },
  "server": {
    "type": "node",
    "entry_point": "npx",
    "mcp_config": {
      "command": "npx",
      "args": [
        "mcp-remote",
        "{{ .MCPURL }}"{{- range .Headers }},
        "--header",
        "{{ . }}:${VALUE}"{{- end }}
      ]
    }
  },
  "user_config": {
    {{- range $i, $header := .Headers }}{{- if $i }},{{ end }}
    "{{ $header }}": {
      "type": "string",
      "title": "{{ $header }}",
      "description": "Get this value from your gram env",
      "sensitive": true,
      "required": true
    }{{- end }}
  }
}
