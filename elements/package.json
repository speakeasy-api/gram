{
  "name": "@gram-ai/elements",
  "description": "Gram Elements is a library of UI primitives for building chat-like experiences for MCP Servers.",
  "type": "module",
  "version": "1.24.2",
  "main": "dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/elements.js",
      "require": "./dist/elements.cjs"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.ts",
      "import": "./dist/plugins.js",
      "require": "./dist/plugins.cjs"
    },
    "./compat": {
      "types": "./dist/compat-plugin.d.ts",
      "import": "./dist/compat-plugin.js",
      "require": "./dist/compat-plugin.cjs"
    },
    "./elements.css": "./dist/elements.css"
  },
  "bin": {
    "elements": "./bin/cli.js"
  },
  "files": [
    "dist",
    "src",
    "bin"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/speakeasy-api/gram.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "analyze": "pnpm dlx vite-bundle-visualizer",
    "storybook": "pnpm clean:cache && storybook dev -p 6007 --no-open",
    "build-storybook": "storybook build --stats-json",
    "chromatic": "chromatic --exit-zero-on-changes",
    "type-check": "tsc --noEmit",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "prepack": "pnpm build",
    "knip": "pnpm dlx knip",
    "knip:fix": "pnpm dlx knip --fix",
    "clean:cache": "rm -rf node_modules/.cache node_modules/.vite"
  },
