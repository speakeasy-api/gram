{
  "openapi": "3.1.0",
  "info": {
    "title": "Gram MCP API",
    "description": "Gram MCP API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://test-gram-hono-app.vercel.app",
      "description": "Vercel Server"
    },
    { "url": "http://localhost:3000", "description": "Local Server" }
  ],
  "paths": {
    "/salutation": {
      "get": {
        "operationId": "getSalutation",
        "summary": "Get a random salutation",
        "description": "Get a random salutation",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "A random salutation",
            "content": { "text/plain": { "schema": { "type": "string" } } }
          }
        }
      }
    },
    "/salutation-json": {
      "get": {
        "operationId": "getSalutation-json",
        "summary": "Get a random salutation in JSON format",
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "A random salutation in JSON format",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "salutation": { "type": "string" } }
                }
              }
            }
          }
        }
      }
    },
    "/markdown": {
      "get": {
        "operationId": "getMarkdown",
        "summary": "Get a markdown",
        "responses": {
          "200": {
            "description": "A markdown",
            "content": {
              "text/markdown": {
                "schema": { "type": "string", "format": "markdown" }
              }
            }
          }
        }
      }
    },
    "/html": {
      "get": {
        "operationId": "getHtml",
        "summary": "Get an HTML",
        "responses": {
          "200": {
            "description": "An HTML",
            "content": { "text/html": { "schema": { "type": "string" } } }
          }
        }
      }
    },
    "/image": {
      "get": {
        "operationId": "getImage",
        "summary": "Get an image",
        "responses": {
          "200": {
            "description": "An image",
            "content": {
              "image/jpeg": {
                "schema": { "type": "string", "format": "binary" }
              }
            }
          }
        }
      }
    },
    "/text": {
      "get": {
        "operationId": "getText",
        "summary": "Get text",
        "responses": {
          "200": {
            "description": "Text",
            "content": { "text/plain": { "schema": { "type": "string" } } }
          }
        }
      }
    },
    "/get-card-details": {
      "get": {
        "operationId": "getGet-card-details",
        "summary": "Get a card details",
        "parameters": [
          {
            "name": "cardNumber",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "A card details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": { "cvc": { "type": "string" } }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {}
}
